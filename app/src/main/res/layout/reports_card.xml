<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CoronaAppTheme.Card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reports_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marging_status_error">

        <TextView
            android:id="@+id/reports_card_title"
            style="@style/CoronaAppTheme.Text.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="@string/title_reports"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/reports_card_chevron"
            android:layout_width="@dimen/chevron_size_title"
            android:layout_height="@dimen/chevron_size_title"
            android:layout_marginEnd="16dp"
            android:scaleX="2"
            android:scaleY="2"
            android:visibility="invisible"
            android:src="@drawable/ic_chevron_right"
            android:tint="@color/dark_main"
            app:layout_constraintBottom_toBottomOf="@+id/reports_card_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reports_card_title" />


        <LinearLayout
            android:id="@+id/reports_card_status_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/status_green_bg"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/reports_card_title"
            app:layout_constraintBottom_toBottomOf="@id/reports_card_status_text"
            app:layout_constraintStart_toStartOf="parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginStart="@dimen/marging_status_error"
            android:layout_marginTop="@dimen/marging_status_error"
            android:layout_marginEnd="@dimen/marging_status_error"/>

        <ImageView
            android:id="@+id/reports_card_status_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:tint="@color/green_main"
            app:layout_constraintTop_toTopOf="@id/reports_card_status_background"
            app:layout_constraintStart_toStartOf="@id/reports_card_status_background"
            android:src="@drawable/ic_check"/>

        <TextView
            android:id="@+id/reports_card_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CoronaAppTheme.Text.Status"
            app:layout_constraintStart_toEndOf="@id/reports_card_status_icon"
            app:layout_constraintTop_toTopOf="@id/reports_card_status_icon"
            app:layout_constraintBottom_toBottomOf="@+id/reports_card_status_icon"
            android:layout_marginStart="16dp"
            android:textColor="@color/green_main"
            android:text="@string/title_reports"/>


        <ImageView
            android:id="@+id/reports_card_status_illustration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ill_no_message"
            app:layout_constraintTop_toBottomOf="@id/reports_card_chevron"
            app:layout_constraintEnd_toEndOf="@id/reports_card_status_background"
            android:layout_marginEnd="@dimen/marging_status_error"/>


        <TextView
            android:id="@+id/reports_card_status_text"
            style="@style/CoronaAppTheme.Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/reports_card_status_title"
            app:layout_constraintEnd_toStartOf="@id/reports_card_status_illustration"
            app:layout_constraintStart_toStartOf="@+id/reports_card_status_title"
            android:layout_marginTop="@dimen/marging_status_error"
            tools:text="Subtext" />

